<style>
    body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 20px;
    background: linear-gradient(135deg, #ea726b, #e0c76b);
}

.card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    margin-top: 7%; /* Clears the navbar */
    gap: 20px; /* Increased space between cards for better layout */
}

.card {
    width: 18rem;
    background-color: #fff; /* Clean white background for the card */
    border-radius: 10px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover effects */
}

.card:hover {
    transform: translateY(-10px); /* Lift on hover */
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2); /* Deeper shadow on hover */
}

.card-img-top {
    height: auto;
    max-height: 160px;
    object-fit: cover; /* Better fit for different image sizes */
    border-bottom: 1px solid #ddd; /* Separating image and content */
}

.card-body {
    padding: 20px;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, #ea726b, #e0c76b); /* Light background for the content */
}

.card-title {
    font-size: 1.3rem;
    font-weight: bold;
    color: #333; /* Darker text for better readability */
    margin-bottom: 10px;
    text-align: center;
}

label {
    font-weight: bold;
    margin-bottom: 5px;
    display: block;
    color: #555;
    background: linear-gradient(135deg, #ea726b, #e0c76b);
}

select.form-select {
    padding: 10px;
    border: 5px solid #ccc;
    border-radius: 5px;
    background: linear-gradient(135deg, #ea726b, #e0c76b);
    color: #333;
    font-size: 1rem;
    width: 100%;
    transition: border-color 0.3s;
}

select.form-select:hover {
    border-color: #ea726b; /* Border change on hover */
}

.btn-primary {
    margin-top: 20px;
    padding: 10px 15px;
    background-color: #4CAF50; /* Green button */
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-align: center;
}

.btn-primary:hover {
    background-color: #45a049; /* Darker green on hover */
}




</style>

<section>
  <div class="container card-container">
    {{#each items}}
      <div class="card">
        
        <div class="card-body">
          <h5 class="card-title">{{this.food_item}}</h5>

          <!-- Dropdown to show restaurants and prices -->
          <label for="restaurantSelect">Select Restaurant:</label>
          <select id="restaurantSelect" class="form-select">
            {{#each this.restaurants}}
              <option  value="{{restaurant}}">{{restaurant}} - â‚¹{{price}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    {{/each}}
  </div>
</section>
